@model IEnumerable<StudentIndexViewModel>

@{ 
    ViewData["Title"] = "Index page";
    int intson = 0;
}
<form asp-controller="Student" asp-action="Index" class="mb-1">
    <div class="input-group">
        <input class="form-control" type="text" name="SearchText" />
        <div class="ml-1">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>T/R</th>
            <th>FullName</th>
            <th>Cours</th>
            <th>Gender</th>
            <th>Passport</th>
            <th>Region</th>
            <th>District</th>
            <th>Interist</th>
            <th>Type of interist</th>
            <th>Faculty</th>
            <th>Branch</th>
            <th>Group</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            intson += 1;
            var photofilePath = "~/images/" + (item.PhotoFile ?? "user.png");
        <tr>
            <td>
                @intson
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img src="@photofilePath"
                         asp-append-version="true"
                         alt=""
                         style="width: 45px; height: 45px"
                         class="rounded-circle" />
                    <div class="ms-4">
                        <p class="fw-bold mb-1">@item.Name</p>
                        <p class="text-muted mb-0">@item.LastName</p>
                    </div>
                </div>
            </td>
            <td>
                <span class="badge badge-success rounded-pill d-inline">@item.Cours</span>
            </td>
            <td>@item.Gender</td>
            <td>@item.Passport</td>
            <td>@item.RegionName</td>
            <td>@item.DistrictName</td>
            <td>@item.InteristName</td>
            <td>@item.InteristTypeName</td>
            <td>@item.FacultyName</td>
            <td>@item.BranchName</td>
            <td>@item.GroupName</td>
            <td>
                <a asp-controller="Student" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                <form class="btn btn-sm-1" asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                        Delete
                    </button>
                </form>


            </td>
        </tr>
        }

    </tbody>
</table>
