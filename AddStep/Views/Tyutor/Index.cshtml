@model IEnumerable<TyutorIndexViewModel>

@{ 
    ViewData["Title"] = "Tyutor Page";
}

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>FullName</th>
            <th>Internship</th>
            <th>MobileNamber</th>
            <th>Gender</th>
            <th>Region</th>
            <th>District</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                         alt=""
                         style="width: 45px; height: 45px"
                         class="rounded-circle" />
                    <div class="ms-3">
                        <p class="fw-bold mb-1">@item.Name</p>
                        <p class="text-muted mb-0">@item.LastName</p>
                    </div>
                </div>
            </td>
            <td>
                <span class="badge badge-success rounded-pill d-inline">@item.Staj</span>
            </td>
            <td>
                <span class="badge badge-primary rounded-pill d-inline">@item.MobileNamber</span>
            </td>
            <td>@item.Gender</td>
            <td>@item.RegionName</td>
            <td>@item.DistrictName</td>
            <td>
                <button type="button" class="btn btn-link btn-sm btn-rounded">
                    View
                </button>
                <button type="button" class="btn btn-link btn-sm btn-rounded">
                    Edit
                </button>
                <button type="button" class="btn btn-link btn-sm btn-rounded text-danger">
                    Delete
                </button>
            </td>
        </tr>
        }

    </tbody>
</table>
