@model IEnumerable<TyutorIndexViewModel>

@{
    ViewData["Title"] = "Tyutor Page";
    int intson = 0;
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>T/R</th>
                        <th>FullName</th>
                        <th>Internship</th>
                        <th>MobileNamber</th>
                        <th>Gender</th>
                        <th>Region</th>
                        <th>District</th>
                        <th>Passport</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        var photofilePath = "~/images/" + (item.PhotoFile ?? "user.png");
                        <tr>
                            <td>
                                @intson
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@photofilePath"
                                         asp-append-version="true"
                                         alt=""
                                         style="width: 45px; height: 45px"
                                         class="rounded-circle" />
                                    <div class="ms-4">
                                        <p class="fw-bold mb-1">@item.Name</p>
                                        <p class="text-muted mb-0">@item.LastName</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge badge-success rounded-pill d-inline">@item.Staj</span>
                            </td>
                            <td>
                                <span class="badge badge-primary rounded-pill d-inline">@item.MobileNamber</span>
                            </td>
                            <td>@item.Gender</td>
                            <td>@item.RegionName</td>
                            <td>@item.DistrictName</td>
                            <td>@item.PassportSeris</td>
                            <td>
                                <a asp-controller="Tyutor" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                                <a asp-controller="Tyutor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form class="btn btn-sm-1" asp-controller="Tyutor" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>


                            </td>
                        </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


