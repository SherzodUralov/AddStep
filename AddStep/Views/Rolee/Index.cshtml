@model IEnumerable<RoleeIndexViewModel>

@{
    ViewData["Title"] = "Role page";
    int intson = 0;
}

<form asp-controller="Tyutor" asp-action="Index" class="mb-1">
    <div class="input-group">
        <input class="form-control" type="text" name="SearchText" />
        <div class="ml-1">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </div>
</form>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>T/R</th>
            <th>Photo</th>
            <th>GroupName</th>
            <th>PassportSeriss</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            intson += 1;
           // var photofilePath = "~/images/" + (item.PhotoFile ?? "user.png");
            <tr>
                <td>
                    @intson
                </td>
                <td>
                    <div class="d-flex align-items-center">
                        <img src="~/images/user.png"
                             asp-append-version="true"
                             style="width: 45px; height: 45px"
                             class="rounded-circle" />
                    </div>
                </td>
                <td>@item.GroupName</td>
                <td>@item.PassportSeriss</td>
                <td>
                    <a asp-controller="Rolee" asp-action="Create" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i> View</a>
                    <a asp-controller="Rolee" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                    <form class="btn btn-sm-1" asp-controller="Rolee" asp-action="Delete" asp-route-id="@item.RoleId" method="post">
                        <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                            Delete
                        </button>
                    </form>


                </td>
            </tr>
        }

    </tbody>
</table>
